local MyName = Player.Name
local UserInputService = game:GetService("UserInputService")
local TweenService = game:GetService("TweenService")

-- [Logics] ‡∏£‡∏∞‡∏ö‡∏ö‡∏™‡∏¥‡∏ó‡∏ò‡∏¥‡πå‡∏Å‡∏≤‡∏£‡πÉ‡∏ä‡πâ‡∏á‡∏≤‡∏ô
_G.VIP_LIST = _G.VIP_LIST or {
    ["ffsww_1007"] = true, 
    ["A_ASPD"] = true, 
