-- [[ Setup Scrolling Area (ส่วนที่เลื่อนได้) ]]
ScrollContainer.Parent = Main
ScrollContainer.Name = "ScriptScroll"
ScrollContainer.BackgroundTransparency = 1
ScrollContainer.Position = UDim2.new(0.32, 0, 0.4, 0)
ScrollContainer.Size = UDim2.new(0, 255, 0, 85) -- ปรับขนาดให้พอดีพื้นที่ตรงกลาง
ScrollContainer.CanvasSize = UDim2.new(0, 0, 2, 0) -- ทำให้เลื่อนลงได้
ScrollContainer.ScrollBarThickness = 2
ScrollContainer.ScrollBarImageColor3 = Color3.fromRGB(255, 0, 0)

CenterLayout.Parent = ScrollContainer
CenterLayout.CellSize = UDim2.new(0, 115, 0, 32)
CenterLayout.CellPadding = UDim2.new(0, 8, 0, 8)

local function createScriptBtn(txt, callback)
    local b = Instance.new("TextButton")
    b.Parent = ScrollContainer
    b.BackgroundColor3 = Color3.fromRGB(45, 0, 0)
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.SpecialElite
    b.TextSize = 10
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    local s = Instance.new("UIStroke", b)
    s.Color = Color3.fromRGB(255, 0, 0)
    b.MouseButton1Click:Connect(callback)
    return b
end

-- [[ รายการปุ่มสคิปต์ ]]
createScriptBtn("DREAM", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/%E0%B8%94%E0%B8%A3%E0%B8%B5%E0%B8%A1"))() end)
createScriptBtn("PCX", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/PCX"))() end)
createScriptBtn("BIG BIKE", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/bigbur"))() end)
createScriptBtn("NOODLE TRUCK", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/Car"))() end)
createScriptBtn("SANS", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/SANS"))() end)
createScriptBtn("KJ", function() loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/kij"))() end)

-- [Logic]
MiniBtn.MouseButton1Click:Connect(function()
    Main.Visible = false
    OpenCircle.Visible = true
end)

OpenCircle.MouseButton1Click:Connect(function()
    Main.Visible = true
    OpenCircle.Visible = false
end)

