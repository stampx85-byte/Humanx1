-- [[ VIP LIST - ffsww_1007 ]]
local VIP_LIST = {
    "ffsww_1007",
    "zx71828",
    "godzilla_minusteen",
    "Fitchburg968",
    "poppeiie99"
}

-- [[ ระบบตรวจสอบ VIP ]]
local Players = game:GetService("Players")
local lp = Players.LocalPlayer
local isVip = false

if lp then
    for _, v in pairs(VIP_LIST) do
        if lp.Name == v then
            isVip = true
            break
        end
    end
end

if not isVip then
    warn("YOU ARE NOT VIP - ACCESS DENIED")
    return 
end

-- [[ เริ่มต้นสคิปต์ ]]
