local function CreateBottom(txt, xPos, color)
    local b = Instance.new("TextButton", BtnHolder)
    b.Size = UDim2.new(0, 82, 1, 0)
    b.Position = UDim2.new(0, xPos, 0, 0)
    b.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.Code
    b.TextSize = 11
    Instance.new("UIStroke", b).Color = color
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    return b
end

local ExecuteBtn = CreateBottom("SCAN ID", 0, Color3.fromRGB(255,0,0))
local PurgeBtn = CreateBottom("PURGE", 89, Color3.fromRGB(150,0,0))
local CopyAllBtn = CreateBottom("DRAIN", 178, Color3.fromRGB(150,0,0))

-- [ Card Logic ]
local function CreateStealCard(targetPlayer, audioId)
    local Card = Instance.new("Frame", ScrollFrame)
    Card.Size = UDim2.new(1, -10, 0, 50)
    Card.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
    Instance.new("UICorner", Card)

    local TargetImg = Instance.new("ImageLabel", Card)
    TargetImg.Size = UDim2.new(0, 40, 0, 40)
    TargetImg.Position = UDim2.new(0, 5, 0, 5)
    TargetImg.Image = Players:GetUserThumbnailAsync(targetPlayer.UserId, Enum.ThumbnailType.HeadShot, Enum.ThumbnailSize.Size150x150)
    TargetImg.BackgroundTransparency = 1
    Instance.new("UICorner", TargetImg).CornerRadius = UDim.new(1, 0)

    local Info = Instance.new("TextLabel", Card)
    Info.Size = UDim2.new(1, -100, 1, 0)
    Info.Position = UDim2.new(0, 50, 0, 0)
    Info.Text = targetPlayer.DisplayName .. "\nID: " .. audioId
    Info.TextColor3 = Color3.new(1, 1, 1)
    Info.TextSize = 10
    Info.Font = Enum.Font.Code
    Info.TextXAlignment = Enum.TextXAlignment.Left
    Info.BackgroundTransparency = 1

    local Copy = Instance.new("TextButton", Card)
    Copy.Size = UDim2.new(0, 45, 0, 30)
    Copy.Position = UDim2.new(1, -50, 0, 10)
    Copy.BackgroundColor3 = Color3.fromRGB(100, 0, 0)
    Copy.Text = "COPY"
    Copy.TextColor3 = Color3.new(1, 1, 1)
    Copy.Font = Enum.Font.SpecialElite
    Copy.TextSize = 10
    Instance.new("UICorner", Copy)

    Copy.MouseButton1Click:Connect(function()
        setclipboard(tostring(audioId))
        Copy.Text = "DONE"
        task.wait(1)
        Copy.Text = "COPY"
    end)
    
    ScrollFrame.CanvasSize = UDim2.new(0, 0, 0, UIList.AbsoluteContentSize.Y)
end

-- [ Penetrate Scan ]
local function Scan()
    for _, v in pairs(ScrollFrame:GetChildren()) do if v:IsA("Frame") then v:Destroy() end end
    for _, p in pairs(Players:GetPlayers()) do
        if p.Character then
            for _, s in pairs(p.Character:GetDescendants()) do
                if s:IsA("Sound") then
                    local id = s.SoundId:match("%d+")
                    if id and #id >= 6 then CreateStealCard(p, id) end
                end
            end
        end
    end
end

ExecuteBtn.MouseButton1Click:Connect(Scan)
PurgeBtn.MouseButton1Click:Connect(function() 
    for _, v in pairs(ScrollFrame:GetChildren()) do if v:IsA("Frame") then v:Destroy() end end 
end)

-- [ Minimize Logic ]
