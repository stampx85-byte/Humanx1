QuickLayout.Padding = UDim.new(0, 8)

local function createQuickBtn(txt, parent)
    local b = Instance.new("TextButton")
    b.Parent = parent or QuickFrame
    b.Size = UDim2.new(0.9, 0, 0, 35)
    b.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
    b.BorderColor3 = Color3.fromRGB(255, 0, 0)
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.SpecialElite
    b.TextSize = 10
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    return b
end

local R6Btn = createQuickBtn("R6 BOSS")
local CityBtn = createQuickBtn("City [TH]")
local GlueBtn = createQuickBtn("GluePiece")

-- ปุ่ม Clicker Items ในแถบสามขีด
local ClickerBtn = createQuickBtn("Clicker Items", Sidebar)

-- Main Buttons Bottom
Btns.Parent = Main
Btns.BackgroundTransparency = 1
Btns.Position = UDim2.new(0.25, 0, 0.82, 0)
Btns.Size = UDim2.new(0, 260, 0, 30)

UIList.Parent = Btns
UIList.FillDirection = Enum.FillDirection.Horizontal
UIList.Padding = UDim.new(0, 8)

local function createBtn(txt, color)
    local b = Instance.new("TextButton")
    b.Parent = Btns
    b.Size = UDim2.new(0, 81, 1, 0)
    b.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
    b.BorderColor3 = color
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.Code
    b.TextSize = 11
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    return b
end

local run = createBtn("EXECUTE", Color3.fromRGB(255, 0, 0))
local clr = createBtn("PURGE", Color3.fromRGB(150, 0, 0))
local cpy = createBtn("DRAIN", Color3.fromRGB(150, 0, 0))

-- [[ Logic Section ]]

-- 1. Sidebar Toggle 
MenuButton.MouseButton1Click:Connect(function()
    Sidebar.Visible = not Sidebar.Visible
end)

MenuLeftButton.MouseButton1Click:Connect(function() 
    SidebarLeft.Visible = not SidebarLeft.Visible
end)

-- ปุ่ม S เปิดแถบยาวบน
S_Button.MouseButton1Click:Connect(function()
    TopBar.Visible = not TopBar.Visible
end)

-- 2. Minimize/Open Logic
MiniButton.MouseButton1Click:Connect(function()
    Main.Visible = false
    Sidebar.Visible = false
    SidebarLeft.Visible = false
    TopBar.Visible = false
    OpenCircle.Visible = true
end)

OpenCircle.MouseButton1Click:Connect(function()
    Main.Visible = true
    OpenCircle.Visible = false
end)

-- 3. Execution Logic
clr.MouseButton1Click:Connect(function() Editor.Text = "" end)
run.MouseButton1Click:Connect(function()
    local s, e = pcall(function() loadstring(Editor.Text)() end)
    if not s then warn("SYSTEM ERROR: " .. e) end
end)

R6Btn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/AdminScript"))()
end)

CityBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/kill%20Aura%20all"))()
end)

GlueBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/Glue%20piece%20all"))()
end)

ClickerBtn.MouseButton1Click:Connect(function()
    loadstring(game:HttpGet("https://raw.githubusercontent.com/stampx85-byte/Humanx1/refs/heads/main/%E0%B8%81%E0%B8%94%E0%B8%A3%E0%B8%B0%E0%B8%A2%E0%B8%B0%E0%B9%84%E0%B8%81%E0%B8%A5"))()
end)
