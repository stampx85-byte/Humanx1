local DrRayLibrary = loadstring(game:HttpGet("https://raw.githubusercontent.com/AZYsGithub/DrRay-UI-Library/main/DrRay.lua"))()
local window = DrRayLibrary:Load("Auto Item Hub", "Default")

-- [ Services ]
local Player = game:GetService("Players").LocalPlayer
local RS = game:GetService("ReplicatedStorage")
local RunService = game:GetService("RunService")
local Workspace = game:GetService("Workspace")
local TeleportService = game:GetService("TeleportService")

-- [ 1. ระบบป้องกันการหลุด Anti-AFK ]
Player.Idled:Connect(function()
    game:GetService("VirtualUser"):CaptureController()
    game:GetService("VirtualUser"):ClickButton2(Vector2.new())
end)

-- [ Global Config ]
local Config = {
    SlimeGroupHunter = false, 
    NoobyHunter = false,      
    NoobGroupHunter = false,  
    ThugHunter = false,
    DuckHunter = false, 
    SwordMasterHunter = false, 
    CutieBossHunter = false,
    ShinoaHunter = false, 
    CharaHunter = false, 
    EvilThugHunter = false, 
    UnknownBossHunter = false,
    SansHunter = false,
    KyoHunter = false, -- เพิ่มระบบล่า Kyo
    AutoLightSword = false,
    LightSwordPos = CFrame.new(554.939148, -29.1302795, -630.229553),
    -- [ ระบบดูดมอนสเตอร์ Chara ]
    BringChara = false,
    CharaPoint = CFrame.new(-29.4552612, -6.01364279, -2148.53149, 0.912973404, -0.338248521, -0.228182599, 0.218168676, -0.0678915754, 0.973546684, -0.344792396, -0.938604653, 0.0118120331),
    -- [ ระบบอื่นๆ ]
    AutoWarpToBoss = false,
    AutoRandom = false, 
    FastAttack = false, 
    AutoEquip = false, 
    ToolName = "", 
    AttackRange = 100,
    AutoFruit = false, AutoMelee = false, AutoDefense = false, AutoStrength = false
}

-- [ ระบบบล็อกรองยืน ]
local function ManagePlatform(state)
    local platName = "AutoItemPlatform"
    if state then
        if not Workspace:FindFirstChild(platName) then
            local plat = Instance.new("Part")
            plat.Name = platName
            plat.Size = Vector3.new(10, 1, 10)
            plat.Transparency = 1
            plat.Anchored = true
            plat.CFrame = Config.LightSwordPos * CFrame.new(0, -3.2, 0)
            plat.Parent = Workspace
        end
    else
        local plat = Workspace:FindFirstChild(platName)
        if plat then plat:Destroy() end
    end
end

-- [ ระบบเช็คบอส - เพิ่ม Kyo เข้าไป ]
local BossToCheck = {
    ["Sans"] = "sans", ["Chara"] = "chara", ["Duck Boss"] = "duck boss",
    ["Shinoa"] = "shinoa", ["Cutie Boss"] = "cutie boss",
    ["Sword Master"] = "sword master", ["Unknown Boss"] = "unknown boss",
    ["Kyo"] = "kyo" -- เพิ่ม Kyo เข้าในรายการเช็ค
}
local LastStatus = {}
local PriorityTarget = nil

task.spawn(function()
    while task.wait(3) do
        PriorityTarget = nil
        for displayName, internalName in pairs(BossToCheck) do
            local bossFound = false
            local b, bh
            for _, obj in ipairs(Workspace:GetDescendants()) do
                if obj:IsA("Model") and string.lower(obj.Name) == internalName then
                    local hum = obj:FindFirstChildOfClass("Humanoid")
                    local hrp = obj:FindFirstChild("HumanoidRootPart")
                    if hum and hum.Health > 0 and hrp then
                        bossFound = true; b = obj; bh = hrp; break
                    end
                end
            end
            if bossFound and Config.AutoWarpToBoss then
                local cfgName = displayName:gsub(" ", "") .. "Hunter"
                if Config[cfgName] then PriorityTarget = {b, bh} end
            end
            if LastStatus[displayName] ~= bossFound then
                if bossFound then
                    game:GetService("StarterGui"):SetCore("SendNotification", {Title = "Boss Alert!", Text = displayName .. " เกิดแล้ว!", Duration = 5})
                end
                LastStatus[displayName] = bossFound
            end
        end
    end
end)

-- [ Logic พื้นฐาน ]
local function GetCharacter() return Player.Character or Player.CharacterAdded:Wait() end

local function FindBoss(name)
    local targetName = string.lower(name)
    for _, obj in ipairs(Workspace:GetDescendants()) do
        if obj:IsA("Model") and string.lower(obj.Name) == targetName then
            local hrp = obj:FindFirstChild("HumanoidRootPart")
            local hum = obj:FindFirstChildOfClass("Humanoid")
            if hrp and hum and hum.Health > 0 then return obj, hrp, hum end
        end
    end
    return nil
end

local function DoFastAttack()
    pcall(function()
        local Char = GetCharacter()
        local CombatRemote = Char:FindFirstChild("Combat_Event", true) or Player.Backpack:FindFirstChild("Combat_Event", true)
        local WeaponRemote = Char:FindFirstChild("Weapon_Event", true) or Player.Backpack:FindFirstChild("Weapon_Event", true)
        local HitboxModule = require(RS:WaitForChild("Module"):WaitForChild("Hitbox"))
        if (CombatRemote or WeaponRemote) and Char:FindFirstChild("HumanoidRootPart") then
            local Range = Config.AttackRange
            local Targets = HitboxModule:Overlap({MaxTarget = 100, Humanoid = Char.Humanoid, CF = Char.HumanoidRootPart.CFrame, Size = Vector3.new(Range, Range, Range)})
            if #Targets > 0 then
                for i = 1, 10 do 
                    if CombatRemote then CombatRemote:FireServer("Attack", Targets) end
                    if WeaponRemote then WeaponRemote:FireServer("Slash", Targets) end
                end
            end
        end
    end)
end

-- [ UI Setup ]
local tabFarm = DrRayLibrary.newTab("Boss Farm", "rbxassetid://4483345998")
local tabCombat = DrRayLibrary.newTab("Combat", "rbxassetid://4483345998")
local tabStats = DrRayLibrary.newTab("Stats", "rbxassetid://4483345998")
local tabMisc = DrRayLibrary.newTab("Misc", "rbxassetid://4483345998")

tabFarm.newToggle("Auto Light Sword", "วาร์ปไปยืนทำของพิกัดบล็อก", false, function(s) Config.AutoLightSword = s ManagePlatform(s) end)
tabFarm.newToggle("Bring Chara", "ดึง Chara มาจุดเดียว", false, function(s) Config.BringChara = s end)

tabFarm.newToggle("Auto Warp To Boss", "เปิด/ปิด วาร์ปไปหาบอสเมื่อเกิด", false, function(s) Config.AutoWarpToBoss = s end)
tabFarm.newToggle("Kyo", "ล่า Kyo (วาร์ปฟาร์มอัตโนมัติ)", false, function(s) Config.KyoHunter = s end) -- เพิ่มปุ่มล่า Kyo
tabFarm.newToggle("Slime Group", "ล่า Slime & King Slime", false, function(s) Config.SlimeGroupHunter = s end)
