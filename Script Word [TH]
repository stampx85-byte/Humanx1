-- UI Buttons Style Helper
local function createQuickBtn(txt, parent)
    local b = Instance.new("TextButton")
    b.Parent = parent
    b.Size = UDim2.new(0, 85, 0, 30) -- ปรับขนาดเล็กน้อยเพื่อให้พอดีกับหลายปุ่ม
    b.BackgroundColor3 = Color3.fromRGB(40, 0, 0)
    b.BorderColor3 = Color3.fromRGB(255, 0, 0)
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.SpecialElite
    b.TextSize = 10
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    return b
end

