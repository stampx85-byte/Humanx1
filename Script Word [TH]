local function createBtn(txt)
    local b = Instance.new("TextButton")
    b.Parent = Btns
    b.Size = UDim2.new(0, 81, 1, 0)
    b.BackgroundColor3 = Color3.fromRGB(30, 0, 0)
    b.Text = txt
    b.TextColor3 = Color3.fromRGB(255, 255, 255)
    b.Font = Enum.Font.Code
    b.TextSize = 11
    Instance.new("UICorner", b).CornerRadius = UDim.new(0, 4)
    return b
end

local run = createBtn("EXECUTE")
local clr = createBtn("PURGE")
local cpy = createBtn("DRAIN")

-- [[ Logic Section ]]

AnimToggleButton.MouseButton1Click:Connect(function()
    BottomBar.Visible = not BottomBar.Visible
end)

MenuButton.MouseButton1Click:Connect(function() Sidebar.Visible = not Sidebar.Visible end)
MenuLeftButton.MouseButton1Click:Connect(function() SidebarLeft.Visible = not SidebarLeft.Visible end)
S_Button.MouseButton1Click:Connect(function() TopBar.Visible = not TopBar.Visible end)

MiniButton.MouseButton1Click:Connect(function()
    Main.Visible = false
    Sidebar.Visible = false
    SidebarLeft.Visible = false
    TopBar.Visible = false
    BottomBar.Visible = false
    OpenCircle.Visible = true
end)

-- Mini Circle Setup
OpenCircle.Parent = ScreenGui
OpenCircle.Size = UDim2.new(0, 60, 0, 60)
OpenCircle.Position = UDim2.new(0.05, 0, 0.5, -30)
OpenCircle.Visible = false
OpenCircle.BackgroundColor3 = Color3.fromRGB(20, 0, 0)
OpenCircle.Image = "rbxassetid://99753024999347"
OpenCircle.Active = true
OpenCircle.Draggable = true
Instance.new("UICorner", OpenCircle).CornerRadius = UDim.new(1, 0)

local RainbowStroke = Instance.new("UIStroke")
RainbowStroke.Parent = OpenCircle
RainbowStroke.Thickness = 3
RainbowStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border

task.spawn(function()
    while true do
        for i = 0, 1, 0.01 do
            RainbowStroke.Color = Color3.fromHSV(i, 1, 1)
            task.wait(0.03)
        end
    end
end)

OpenCircle.MouseButton1Click:Connect(function()
    Main.Visible = true
    OpenCircle.Visible = false
end)

-- [[ Script Executions ]]
run.MouseButton1Click:Connect(function()
    local s, e = pcall(function() loadstring(Editor.Text)() end)
    if not s then warn(e) end
end)
clr.MouseButton1Click:Connect(function() Editor.Text = "" end)

